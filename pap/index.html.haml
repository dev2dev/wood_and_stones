    :javascript
      var jQT = new $.jQTouch({
          icon: 'i/black_white.png',
          statusBar: 'black-translucent',
          touchSelector: '.board .intersection, .board, .touch',
          preloadImages: [
              '/i/back_button_clicked.png',
              '/i/button_clicked.png',
              '/i/ajax-loader-black.gif'
              ]
      });
      $(function(){
          jQT.addAnimation({
              name: 'slideback',
              selector: '.slideback'
          });
      });
      var iphone_layout_helper = GO.iphone_layout_helper();
      $(document).ready( function () {
        iphone_layout_helper.document_ready_hook();
      }); 
  %body
    %div#useful_stuff
      .ajax_load
        %img{:src=>'/images/ajax-loader-black.gif',:height=>66,:width=>66}
    = yield