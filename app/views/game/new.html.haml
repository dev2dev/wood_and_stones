:javascript
  var game_new_helper = GO.game_new_helper();
  $(document).ready( function () {
    game_new_helper.document_ready_hook();
  });    
#new.current
  .toolbar 
    %h1 New Game
  %form#ajax_create.form.new_game{:action=>url_for(:controller=>:game, :action=>:create), :method=>'POST'}
    %input{:type => 'hidden', :name => 'authenticity_token', :value => form_authenticity_token}
    %input#black{:type => 'hidden', :name => 'black'}
    %input#white{:type => 'hidden', :name => 'white'}
    %ul.edit.rounded
      %li.email
        %img.label{:src=>'/images/dot_clear.gif'}>
        -if current_user()
          %input#player{:name=>'player', :value=>current_user().email, :type=>'text', :disabled=>'disabled'}/
        -else
          %input#player{:name=>'player', :placeholder=>"Your email address", :type=>'text'}/
      %li.email
        %img.label{:src=>'/images/dot_clear.gif'}>
        %input#opponent{:name=>'opponent', :placeholder=>"Opponent's email address", :type=>'text'}/
      %li.size
        .label Size: 
        %select#dimension{:name=>'dimension'}
          - Board::DIMENSIONS.each do |dim|
            %option{:value=>dim} #{dim}x#{dim}
      %li.you_play
        .label You play:
        .toggle
          %input#colour{:name=>'colour', :type=>'checkbox', :checked=>"checked"}
      %li.handicap
        .label Handicap:
        %select#handicap{:name=>'handicap'}
          %option{:value=>0} Black plays first
          %option{:value=>2} Two stones
          %option{:value=>3} Three stones
          %option{:value=>4} Four stones
          %option{:value=>5} Five stones
          %option{:value=>6} Six stones
          %option{:value=>7} Seven stones
          %option{:value=>8} Eight stones
          %option{:value=>9} Nine stones
    %a.submit.whiteButton{:style=>"margin:0 10px;color:rgba(0,0,0,.9)", :href=>"#"} Invite