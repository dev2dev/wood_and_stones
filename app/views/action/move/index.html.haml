-@actions.each do |action|
  .move{:id=>"m#{action.cardinality}"}
    .toolbar 
      %h1 Move #{action.cardinality}
      %a.back{:href=>"#"} Back
    .board
      = render :partial => "board/board", :locals => { :board => action.after }
    %ul.individual.history
      %li.prev
        %a.slideright{:href=>"#m#{action.cardinality - 1}"}
          Prev
          %small
            = action.cardinality - 1
      -if action.cardinality < action.game.actions.size
        %li.next
          %a.slideleft{:href=>"#m#{action.cardinality + 1}"}
            Next
            %small
              = action.cardinality + 1
      -else
        %li.next.invisible
          %a.slideleft{:href=>"#m#{action.cardinality + 1}"}
            Next
            %small
              = action.cardinality + 1