# A move is a placement of a stone that happens when a player places a stone on their turn
class Action::Move < Action::PlaceStone
  
  before_create :remove_opponent_dead_stones
  
  validates_each :position do |record, attr, value|
    if record.before
      record.errors.add attr, 'should be to an empty position on the board' unless begin
        record.before[value].blank?
      end
    end
  end
  
  private
  
  def remove_opponent_dead_stones
    raise "implement me!"
  end
  
end